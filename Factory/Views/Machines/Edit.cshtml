@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="container" id="main">
  <h1>Modify this Machine?</h1>

  <h4>Edit this Equipment: @Html.DisplayFor(model => model.Hardware)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.LabelFor(model => model.Hardware)
    @Html.EditorFor(model => model.Hardware)

    @Html.Label("Engineer asignment:")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
  }

  <p>@Html.ActionLink("Current Machine List", "Index")</p>
</div>